<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <useTransitiveFiltering>true</useTransitiveFiltering>
